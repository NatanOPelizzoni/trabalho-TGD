<form <%= id ? '' : 'action=/api/livro' %> method="POST" id="<%- acao %>_livro">
    <div class="form_livro">
        <input type="hidden" name="id" id="id" value="<%= id ? id : '' %>">
        <div class="form-group">
            <label for="titulo" class="text-light">Título <span class="campo-required">*</span></label>
            <input type="text" name="titulo" id="titulo" value="<%= livro ? livro.titulo : '' %>">
        </div>

        <div class="form-group">
            <label for="paginas" class="text-light">Página(s)</label>
            <input type="number" name="paginas" id="paginas" value="<%= livro ? livro.paginas : '' %>">
        </div>

        <div class="form-group">
            <label for="genero" class="text-light">Gênero(s)</label>
            <input type="text" name="genero" id="genero" value="<%= livro ? livro.genero : '' %>">
        </div>
        
        <div class="form-group">
            <label for="autorId" class="text-light">Autor <span class="campo-required">*</span></label>
            <select name="autorId" id="autorId">
                <option value="">Selecione</option>
                <% for(var i = 0; i < autores.length; i++){ %>
                    <option <%= livro ? (livro.autorId.toString() == autores[i]._id.toString() ? 'selected' : '') : '' %> value="<%= autores[i]._id; %>"><%= autores[i].nome; %></option>
                <% } %>
            </select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark <%- acao %>">Salvar</button>
        </div>
    </div>
</form>