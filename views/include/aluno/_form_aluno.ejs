<form <%= id ? '' : 'action=/api/aluno' %> method="POST" id="<%- acao %>_aluno">
    <div class="form_aluno">
        <input type="hidden" name="id" id="id" value="<%= id ? id : '' %>">
        <div class="form-group">
            <label for="nome" class="text-light">Nome <span class="campo-required">*</span></label>
            <input type="text" name="nome" id="nome" value="<%= aluno ? aluno.nome : '' %>">
        </div>

        <div class="form-group">
            <label for="matricula" class="text-light">Matr√≠cula <span class="campo-required">*</span></label>
            <input type="number" name="matricula" id="matricula" value="<%= aluno ? aluno.matricula : '' %>">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark <%- acao %>">Salvar</button>
        </div>
    </div>
</form>